<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">


    <ToggleButton
        android:id="@+id/toggle_nur_ungelernt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Nur ungelernte"
        android:textOff="Alle Karten"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/text_fortschritt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karte 1 von 1"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/text_karte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hier kommt die Frage"
        android:textSize="24sp"
        android:padding="32dp"
        android:background="#eeeeee"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_naechste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ¤chste Karte"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/button_gelernt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Als gelernt markieren"
        android:layout_marginTop="16dp" />

</LinearLayout>
