<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Kartenset-Titel -->
        <EditText
            android:id="@+id/text_set_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set: ..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Eingabe: Frage -->
        <EditText
            android:id="@+id/edit_frage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frage eingeben"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Eingabe: Antwort -->
        <EditText
            android:id="@+id/edit_antwort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Antwort eingeben"
            android:inputType="text"
            android:layout_marginBottom="24dp" />

        <!-- Button: Karte speichern -->
        <Button
            android:id="@+id/button_speichern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Karte speichern" />

        <!-- Optional: Fertig / ZurÃ¼ck -->
        <Button
            android:id="@+id/button_fertig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fertig"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
